PORT=3000

# Public URL Twilio uses for TwiML and WebSocket (required for real calls).
# For local dev, use ngrok: `ngrok http 3000` then set BASE_URL=https://YOUR_SUBDOMAIN.ngrok.io
BASE_URL=https://your-subdomain.ngrok.io

# Twilio (needed for POST /call)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Gemini Live
GEMINI_API_KEY=your_gemini_api_key

# Audio quality settings
# OUTPUT_SAMPLE_RATE: 16000 (16kHz, good quality) or 44100 (CD quality, larger files)
OUTPUT_SAMPLE_RATE=16000

# Note: "enhancement/noise reduction" is intentionally disabled for telephony audio.

# Recording format:
# - pcm: decode μ-law → PCM16 and write PCM WAV (default)
# - mulaw: write μ-law WAV (preserves exact Twilio bytes)
# - both: write both files for A/B comparison
RECORD_CODEC=pcm
